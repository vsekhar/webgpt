{
    "manifest_version": 2,
    "name": "WebGPT",
    "version": "1.0",
    "description": "WebGPT uses AI to make you more productive",
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "scripts": [
        "popup.js"
    ]
  }
  